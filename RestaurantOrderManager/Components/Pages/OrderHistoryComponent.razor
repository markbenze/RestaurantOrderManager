@page "/order-history"
@rendermode InteractiveServer

@using System.Globalization

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Table</th>
            <th>State</th>
            <th>Date</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.TableId</td>
                <td>@order.State</td>
                <td>@order.CreatedAt.ToString("yyyy-MM-dd", CultureInfo.InvariantCulture)</td>
                <td>@order.Total.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>