@page "/order-history"
@rendermode InteractiveServer

@using System.Globalization

<table class="table table-striped table-hover border text-center">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Table No.</th>
            <th>State</th>
            <th>Date</th>
            <th>Total</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in _orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.TableId</td>
                <td>@order.State</td>
                <td>@order.CreatedAt.ToString("yyyy-MM-dd HH:mm", CultureInfo.InvariantCulture)</td>
                <td>@order.Total.ToString("C")</td>
                <td>
                    <NavLink class="btn btn-primary btn-sm" href="@($"/order/details/{order.Id}")">Open</NavLink>
                </td>
            </tr>
        }
    </tbody>
</table>