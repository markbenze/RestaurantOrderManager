@page "/checkout/{OrderId:int}"
@using System.Globalization
@using RestaurantOrderManager.Client.Services
@using RestaurantOrderManager.Shared.Models

<h3 class="mb-4">Checkout</h3>

@if (_order == null)
{
    <div class="alert alert-warning">Order not found.</div>
}
else
{
    <div class="card mb-4">
        <div class="card-body">
            <div class="mb-2"><strong>Order</strong> #@_order.Id</div>
            <div class="mb-2"><strong>Table:</strong> @_order.TableId</div>
            <div class="mb-2"><strong>Date:</strong> @_order.CreatedAt.ToString("yyyy-MM-dd HH:mm", CultureInfo.InvariantCulture)</div>
            <div class="mb-2"><strong>State:</strong> @_order.State</div>
        </div>
    </div>

    <table class="table table-striped mb-4">
        <thead class="table-dark">
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in _order.OrderItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.Price €</td>
                    <td>@(item.Quantity * item.Price) €</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="fw-bold fs-5">Total: @_order.Total.ToString("C")</div>
        <button class="btn btn-success"
                @onclick="CompleteCheckout"
                disabled="@(_order.State == OrderState.Completed)">
            Settle Bill
        </button>
    </div>
}