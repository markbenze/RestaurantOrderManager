@page "/order/details/{OrderId:int}"
@using System.Globalization
@using RestaurantOrderManager.Shared.Models

<h3 class="mb-4 fw-bold">Order #@_currentOrder.Id - Table @_currentOrder.TableId.</h3>

<div class="mb-3">
    <div><strong>State:</strong> @_currentOrder.State</div>
    <div><strong>Date:</strong> @_currentOrder.CreatedAt.ToString("yyyy-MM-dd HH:mm", CultureInfo.InvariantCulture)</div>
</div>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Item</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in _currentOrder.OrderItems)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
                <td>@item.Price €</td>
                <td>@(item.Quantity * item.Price) €</td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex gap-2 mt-4">
    <button class="btn btn-danger"
            @onclick="CancelOrder"
            disabled="@(_currentOrder.State != OrderState.Pending)">
        Cancel Order
    </button>
    @if (_currentOrder.State == OrderState.Pending)
    {
        <button class="btn btn-warning"
                @onclick="SendToKitchen">
            To Kitchen
        </button>
    }
    <button class="btn btn-success"
            @onclick="GoToCheckout"
            disabled="@(_currentOrder.State != OrderState.InProgress)">
        Checkout Page
    </button>
</div>