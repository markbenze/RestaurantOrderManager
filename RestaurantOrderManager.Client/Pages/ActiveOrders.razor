@page "/active-orders"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@using RestaurantOrderManager.Shared.Models
@using RestaurantOrderManager.Client.Services

<h3 class="mt-4 mb-3 text-center">Active Orders</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger text-center">@errorMessage</div>
}

<table class="table table-striped table-hover border text-center mt-4">
    <thead class="table-dark">
        <tr>
            <th>Order no.</th>
            <th>Table No.</th>
            <th>State</th>
            <th>Date</th>
            <th>Total</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @if (orders != null)
        {
            @foreach (var order in orders)
            {
                <tr>
                    <td>#@order.Id</td>
                    <td>@order.TableId</td>
                    <td>@order.State</td>
                    <td>@order.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@order.Total.ToString("C")</td>
                    <td>
                        <NavLink class="btn btn-primary btn-sm" href="@($"/order/details/{order.Id}")">
                            <i class="bi bi-box-arrow-up-right me-1"></i> Open
                        </NavLink>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>