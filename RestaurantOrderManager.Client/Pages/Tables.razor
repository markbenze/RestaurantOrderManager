@page "/tables"
@using RestaurantOrderManager.Shared.Models

<div class="container mt-4">
    <div class="row">
        @foreach (var table in _tables)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card border shadow-sm bg-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">Table @table.Id</h5>
                        <p class="fw-bold"> Status: @table.Status</p>
                        <p>
                            @if (table.OrderNumber != 0)
                            {
                                <NavLink class="btn btn-outline-primary" href="@($"/order/details/{table.OrderNumber}")">Order #@table.OrderNumber</NavLink>
                            }
                            else
                            {
                                <span>No Active Order</span>
                            }
                        </p>
                        @if (@table.Status == TableStatus.Free)
                        {
                            <NavLink class="btn btn-outline-primary w-100" href="@($"/order/{table.Id}")">Take Order</NavLink>
                        }
                        else
                        {
                            <button class="btn btn-outline-primary w-100" disabled="">Occupied</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>