@using Microsoft.AspNetCore.Components.Authorization
@using RestaurantOrderManager.Client.Authentication

@inject IJSRuntime JS
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthProvider

<style>
    .sidebar-nav {
        min-height: 100vh;
        width: 220px;
        background-color: #343a40; /* dark gray */
        color: #fff;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
        padding-top: 1rem;
        text-align: center;
    }
    .sidebar-nav .nav-link {
        color: #fff;
        font-size: 1.1rem;
        padding: 0.75rem 1rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 100%;
    }

    .sidebar-nav .nav-link:hover {
        color: #ffd700;
        text-decoration: none;
    }

    .sidebar-nav .nav-link.active {
        background-color: #495057;
        color: #ffd700;
    }
    .sidebar-nav .bi {
        margin-right: 0.75rem;
        font-size: 1.3rem;
    }
    .custom-brand {
        font-size: 1.5rem;
        font-weight: 600;
        color: #fff;
        text-decoration: none;
        letter-spacing: 1px;
        padding: 0.5rem 0;
        display: inline-block;
        transition: color 0.2s;
    }
    .custom-brand:hover {
        color: #ffd700;
        text-decoration: none;
    }

    .custom-brand.active {
        color: #ffd700;
        text-decoration: none;
    }

    .logout-btn {
        background: none;
        color: #adb5bd;
        font-weight: 400;
        border: none;
        border-radius: 0.25rem;
        width: 100%;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background 0.2s, color 0.2s;
    }

    .logout-btn:hover, .logout-btn:focus {
        background-color: #495057;
        color: #ffd700;
        outline: none;
    }

    .logout-btn .bi {
        margin-right: 0.5rem;
        font-size: 1.1rem;
    }
</style>

<nav class="sidebar-nav">
    <div class="mb-3 d-flex justify-content-center align-items-center">
        <NavLink class="custom-brand" href="/tables">Restaurant Manager</NavLink>
    </div>
    <ul class="nav flex-column">
        <li class="nav-item mb-2">
            <NavLink class="nav-link" href="/tables">
                <i class="bi bi-table"></i>
                Tables
            </NavLink>
        </li>
        <li class="nav-item">
            <NavLink class="nav-link" href="/reservations">
                <span class="me-2">
                    <i class="bi bi-calendar-check"></i> 
                </span>
                Reservations
            </NavLink>
        </li>
        <li class="nav-item mb-2">
            <NavLink class="nav-link" href="/active-orders">
                <i class="bi bi-lightning"></i>
                Active Orders
            </NavLink>
        </li>
        <li class="nav-item mb-2">
            <NavLink class="nav-link" href="/order-history">
                <i class="bi bi-clock-history"></i>
                Order History
            </NavLink>
        </li>
        <AuthorizeView Roles="Admin">
            <li class="nav-item mb-2">
                <NavLink class="nav-link" href="/manage-tables">
                    <i class="bi bi-gear"></i>
                    Manage Tables
                </NavLink>
            </li>
        <li class="nav-item mb-2">
            <NavLink class="nav-link" href="/manage-users">
                <i class="bi bi-people"></i>
                Manage Users
            </NavLink>
        </li>
        <li class="nav-item mb-2">
            <NavLink class="nav-link" href="/menu-editor">
                <i class="bi bi-list"></i>
                Manage Menu
            </NavLink>
        </li>
        </AuthorizeView>
        <li class="nav-item mt-4">
            <button class="logout-btn" @onclick="Logout">
                <i class="bi bi-box-arrow-right"></i> Logout
            </button>
        </li>
    </ul>
</nav>

@code {
    private async Task Logout()
    {
        await JS.InvokeVoidAsync("localStorage.clear");
        if (AuthProvider is JwtAuthenticationStateProvider jwtProvider)
        {
            jwtProvider.NotifyAuthenticationStateChanged();
        }
        Navigation.NavigateTo("/", true);
    }
}